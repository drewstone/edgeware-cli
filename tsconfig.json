{
  "compilerOptions": {
    "typeRoots": [
      "./node_modules/@polkadot/ts",
      "./node_modules/@types"
    ],
    "declaration": true,
    "outDir": "dist",
    "target": "esnext",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmit": true,
    "jsx": "preserve",
    "skipLibCheck": false,
    "resolveJsonModule": true,
    "allowJs": true,
  },
  "include": [
    "./src/*"
  ]
}
