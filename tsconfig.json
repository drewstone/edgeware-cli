{
  "compilerOptions": {
    "allowJs": true,
    "target": "esnext",
    "moduleResolution": "node",
    "module": "commonjs",
    "allowSyntheticDefaultImports": true,
    "outDir": "./build",
    "baseUrl": "./src/scripts",
    "resolveJsonModule": true
  },
  "include": [
    "./src/*"
  ],
  "exclude": [
    "./src/cli.ts",
    "./src/util.ts",
    "./node_modules"
  ]
}