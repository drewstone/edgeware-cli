{
  "compilerOptions": {
    "typeRoots": [
      "./node_modules/@polkadot/ts",
      "./node_modules/@types"
    ],
    "baseUrl": ".",
    "isolatedModules": true,
    "outDir": "dist",
    "target": "esnext",
    "allowJs": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "noEmit": true,
    "jsx": "preserve"
  },
  "include": [
    "./src/api/*"
  ]
}
