{
  "compilerOptions": {
    "allowJs": true,
    "target": "esnext",
    "sourceMap": true,
    "moduleResolution": "node",
    "module": "commonjs",
    "allowSyntheticDefaultImports": true,
    "outDir": "./dist",
    "baseUrl": "./src/scripts",
    "resolveJsonModule": true
  },
  "include": [
    "./src/*"
  ],
  "exclude": [
    "**/*.spec.ts",
    "./node_modules"
  ]
}